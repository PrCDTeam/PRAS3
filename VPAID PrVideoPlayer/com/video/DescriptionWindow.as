package com.video {	import flash.text.TextField	import flash.text.TextFormat;		import flash.display.Sprite;		public class DescriptionWindow extends Sprite{		private var head_txt:TextField = new TextField()		private var sub_txt:TextField = new TextField()		private var desc_txt:TextField = new TextField()		private var bg_mc:Sprite = new Sprite();		private var headFormat:TextFormat;		private var subHeadFormat:TextFormat;		private var descFormat:TextFormat;		private var descArray:Array = new Array();		private var videoPlayer:PrVideoPlayer				public function DescriptionWindow(videoPlayer:PrVideoPlayer, descArray:Array, headFormat:TextFormat, subHeadFormat:TextFormat, descFormat:TextFormat, bgHex:uint) {			this.videoPlayer = videoPlayer;			this.descArray = descArray			this.headFormat = headFormat			this.subHeadFormat = subHeadFormat			this.descFormat = descFormat			mouseChildren = false;						head_txt.wordWrap = sub_txt.wordWrap = desc_txt.wordWrap = head_txt.multiline = sub_txt.multiline = desc_txt.multiline = true;			head_txt.autoSize = sub_txt.autoSize = desc_txt.autoSize = 'left';			head_txt.y = head_txt.x = sub_txt.x = desc_txt.x = 6			head_txt.width = sub_txt.width = desc_txt.width = videoPlayer.playerWidth - head_txt.x*2						bg_mc.graphics.beginFill(bgHex, .85)			bg_mc.graphics.drawRect(0,0,videoPlayer.playerWidth,videoPlayer.playerHeight)						addChild(bg_mc)			addChild(desc_txt)			addChild(sub_txt)			addChild(head_txt)						hide()		}				public function setDescription(i:uint):void{			var a:Array = descArray[i].split('|')			head_txt.height = sub_txt.height = desc_txt.height = 10;			head_txt.text = a[0]			sub_txt.text = a[1]			desc_txt.text = a[2].substring(a[2].indexOf(': ')+2, a[2].length)+'.'						head_txt.setTextFormat(headFormat)			sub_txt.setTextFormat(subHeadFormat)			desc_txt.setTextFormat(descFormat)						sub_txt.y = head_txt.y + head_txt.textHeight + 3			desc_txt.y = sub_txt.y + sub_txt.textHeight + 3						bg_mc.height = desc_txt.y + desc_txt.textHeight + 30;			y = videoPlayer.playerHeight - height;		}				public function appear():void{			visible = true;		}				public function hide():void{			visible = false		}		}}