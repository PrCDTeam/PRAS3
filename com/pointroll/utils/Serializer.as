package com.pointroll.utils{	import com.pointroll.interfaces.ISerializable;	import flash.utils.ByteArray;	import com.pointroll.utils.Base64;	public class Serializer implements ISerializable {		public function Serizlizer(){}		public function serialize(o:Object):String {			if (o==null) {				throw new Error("null isn't a legal serialization candidate");			}			var bytes:ByteArray = new ByteArray();			bytes.writeObject(o);			bytes.position=0;			return Base64.encode(bytes);		}		public function deserialize(s:String):Object {			var result:ByteArray=Base64.decode(s);			result.position=0;			return result.readObject();		}	}}