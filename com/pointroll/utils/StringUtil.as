package com.pointroll.utils{	import flash.geom.Point;	import flash.text.TextField;	import flash.text.TextLineMetrics;	public class StringUtil {		private static var _lastChar:TextLineMetrics;		private static var _x:int;		private static var _y:int;		private static var _gutter:int = 2;		public static function getEndOfLine( tf:TextField, line:int ):Point {			_lastChar = tf.getLineMetrics(line);			_x= tf.x + _lastChar.width + _gutter;			_y= _lastChar.height * line  + _lastChar.ascent;			return new Point( _x, _y );		}	}}